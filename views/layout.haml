%html
  %head
    %meta{"http-equiv" => "content-type", :content => "text/html; charset=utf-8"}
    %meta{:name => "language", :content => "en"}
    %meta{:name => "description", :content => "Columbus Clojure User Group is a group of hackers enthusiastic about Clojure"}
    %meta{:name => "keywords", :content => "clojure columbus functional programming usergroup"}

    %title Columbus Clojure User Group

    %link{:rel => "stylesheet", :href => "/stylesheets/reset.css", :type => "text/css"}
    %link{:rel => "stylesheet", :href => "/screen.css", :type => "text/css"}
    %link{:rel => "icon", :href => "/favicon.ico"}
    %link{:rel => "shortcut icon", :href => "/favicon.ico"}

    %script{:rel => "javascript", :src => "/javascripts/jquery-1.7.1.min.js", :type => "text/javascript"}
    %script{:rel => "javascript", :src => "/javascripts/jquery-ui-1.8.18.custom.min.js", :type => "text/javascript"}
    %script{:rel => "javascript", :src => "/javascripts/underscore-min.js", :type => "text/javascript"}
    %script{:rel => "javascript", :src => "/javascripts/sugar-1.2.4.min.js", :type => "text/javascript"}
    %script{:rel => "javascript", :src => "/javascripts/site.js", :type => "text/javascript"}

    %body
      #image-bar
        %img(src='http://upload.wikimedia.org/wikipedia/commons/f/fc/Columbus-ohio-skyline-panorama.jpg'
             alt='Photo courtesy of http://en.wikipedia.org/wiki/File:Columbus-ohio-skyline-panorama.jpg')

      #main
        .container
          = yield

      #twitter
        %img(src='/images/twitter-newbird-white.png')
        .container
          %h2
            Latest Tweets from
            %a(href="https://twitter.com/columbusclojure" target="_blank") @ColumbusClojure
          #tweets

      %script#tweetTemplate(type="text/template")
        %span.time <%= time %> &mdash;
        %br
        <%= tweet %>