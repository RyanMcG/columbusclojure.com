/#announcements
/  %span ANNOUNCEMENT: July meeting has been rescheduled to the 11th

#image-bar
  %img(src='http://upload.wikimedia.org/wikipedia/commons/f/fc/Columbus-ohio-skyline-panorama.jpg'
       alt='Photo courtesy of http://en.wikipedia.org/wiki/File:Columbus-ohio-skyline-panorama.jpg')

#main
  .container
    %h1
      %a(href="/")
        %img(src='/images/clojure-icon.gif')
        Columbus Clojure User Group

    #banner
      %a(href="#{@mailing_list}" target="_blank") Join the Mailing List
      %a(href="#{@twitter_url}" target="_blank") Follow us on Twitter

    .thirds
      #where.third
        = haml :where

      #when.third
        = haml :when, :locals => {:next_meeting => @next_meeting}

      #speakers.third
        = haml :speakers, :locals => {:next_meeting => @next_meeting, :mailing_list => @mailing_list}

    .thirds
      #who.third
        = haml :who

      #what.third
        = haml :what

      #join.third
        %h2
          %img(src='/images/stylistica-icons-set/24x24/link.png')
          Join Us

        %section
          %p
            Join our
            %a(href="#{@mailing_list}" target="_blank") mailing list
            and join in on all the fun.
            %strong OR
            just show up at our
            <a href="#when" class="when-link">next meeting</a>.
            Meetings are held the first Wednesday of every month.

#twitter
  %img(src='/images/twitter-bird-dark-bgs.png')
  .container
    %h2
      Latest Tweets from
      %a(href="#{@twitter_url}" target="_blank") @ColumbusClojure
    #tweets.halves

%script#tweetTemplate(type="text/template")
  %span.time <%= time %> &mdash;
  %br
  <%= tweet %>
